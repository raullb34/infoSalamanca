{
  "name": "infosalamanca",
  "version": "1.0.0",
  "description": "Interactive map application for Salamanca municipalities with AI-powered assistant",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "start": "echo 'Use Railway services individually'",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "install:all": "npm install --omit=dev && cd frontend && npm install --omit=dev && cd ../backend && npm install --omit=dev",
    "install:dev": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "salamanca",
    "interactive-map",
    "municipalities",
    "vue",
    "express",
    "ai-assistant"
  ],
  "author": "raullb34",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
